<Window x:Class="CMCSPrototype.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCSPrototype"
        mc:Ignorable="d"
        Title="HomePage" Height="450" Width="800" Background="#1E1E1E">

    <Grid Margin="20">
        <!-- Welcome Message -->
        <TextBlock Text="Welcome to the Claims System" FontSize="30" FontWeight="Bold"
                   Foreground="#007ACC" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Navigation Instructions (Optional) -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Please use the menu above to navigate." FontSize="16" Foreground="White" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>